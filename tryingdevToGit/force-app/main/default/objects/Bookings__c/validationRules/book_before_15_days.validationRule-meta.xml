<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>book_before_15_days</fullName>
    <active>true</active>
    <errorConditionFormula>(Trip_Date__c - today()) &lt; 15</errorConditionFormula>
    <errorMessage>Cannot book for such a short notice.</errorMessage>
</ValidationRule>
